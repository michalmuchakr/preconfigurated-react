{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist/",
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "typeRoots": ["./node_modules/@types", "./setup/@types"]
  }
}
